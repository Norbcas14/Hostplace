<div class="container justify-content center">
  <h1>MY PLACES</h1>
  <h1> <%= @place.name %></h1>
  <p><%= @place.country %></p>
  <p><%= @place.address %></p>
  <p><%= @place.description %></p>
  <p><%= @place.picture %></p>

  <%= link_to "Back to places", root_path %>
  <%= link_to "Edit place", edit_place_path %>
  <%= link_to "Delete",
    place_path(@place),
    method: :delete,
    data: { confirm: "Are you sure?" } %>

  <div class="container justify-content center">
  <button type="button" class="btn btn-primary btn-lg" link_to new_place_booking_path>Reservar</button>
  </div>
</div>
