
  <div class= "card my-3">
    <%# <%= cl_image_tag locals[:place].photo.key, height: 400, width: 600, crop: :fill %>
    <%= cl_image_tag locals[:place].photo.key, height: 185, class:"card-image-top" %>
    <div class="card-body">
      <h3 class="card-title"><%= link_to(locals[:place].name, locals[:place], class:"text-secondary")%></h3>
      <p class="card-text"><strong>Country:</strong>
      <%= locals[:place].country_name %></p>
      <p class="card-text"><strong>Address:</strong>
      <%= locals[:place].address %></p>
      <p class="card-text"><strong>Description:</strong>
      <%= locals[:place].description %></p>
    </div>
</div>
